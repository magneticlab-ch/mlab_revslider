<odoo>
    <data>
        <!-- 
            Ajout du snippet dans le webuilder
            Attention!!! la vue slider doit exister!
        -->
        <template id="mlab_snippet" inherit_id="website.snippets" name="Mlab Snippet">
          <xpath expr="//div[@id='snippet_structure']/div[@class='o_panel_body']" position="inside">
             <t t-snippet="odoo-revslider.mlab_slider"
                t-thumbnail="/odoo-revslider/static/src/img/snippets/mlab_slider.png"/>
          </xpath>
        </template>
    </data>
</odoo>